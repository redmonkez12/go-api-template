import (
	"log"
	"net/http"

	"{{.ModuleName}}/internal/auth"
	"{{.ModuleName}}/internal/config"
	"{{.ModuleName}}/internal/httputil"
	"{{.ModuleName}}/internal/logging"

	"github.com/go-chi/chi/v5"
	"github.com/go-chi/chi/v5/middleware"
